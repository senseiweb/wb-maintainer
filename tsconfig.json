{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./src",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "module": "esnext",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "typeRoots": ["node_modules/@types", "src/@app_types"],
    "lib": ["es2017", "dom"],
    "plugins": [{ "name": "typescript-tslint-plugin" }],
    "paths": {
      "@fuse": ["@fuse/"],
      "@app_types": ["@app_types/"]
    }
  }
}
